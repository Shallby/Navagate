<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/Scale_ImageView"
                android:layout_width="match_parent"
                android:layout_height="440dp"
                android:scaleType="center"
                android:src="@drawable/pika" />

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:onClick="CENTER_CROP"
                    android:text="Center_CROP" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:onClick="CENTER_INSIDE"
                    android:text="Center_INSIDE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="wrap_content">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:onClick="FIT_CENTER"
                    android:text="Fit_Center" />

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:onClick="FIT_END"
                    android:text="fit_end" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:onClick="NextViewPiKa"
                    android:text="换张图片" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"/>
                <ImageView
                    android:id="@+id/imageForShow"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_seu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请您选择想要方法的图片"
                    android:textSize="22sp"
                    android:layout_gravity="center"/>
                <HorizontalScrollView
                    android:layout_width="361dp"
                    android:layout_height="178dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/image2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_seu" />

                        <ImageView
                            android:id="@+id/image1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/timg" />

                        <ImageView
                            android:id="@+id/image3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/nine" />

                        <ImageView
                            android:id="@+id/image4"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            android:src="@drawable/timg" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

